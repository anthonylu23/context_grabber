{
  "manifest_version": 3,
  "name": "Context Grabber Safari",
  "version": "0.1.0",
  "description": "Capture active-tab context and exchange messages with the native host.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab", "nativeMessaging"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "dist/runtime/background-main.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/runtime/content-main.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Context Grabber",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }
}
